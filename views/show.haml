%html
  %head
    %link{:href => "http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.css", :rel => "stylesheet"}
    %script{:src => "http://code.jquery.com/jquery-1.5.min.js", :type => "text/javascript"}
    %script{:src => "http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.js", :type => "text/javascript"}
  %body
    %div{:"data-role" => "page"}
      %div{:"data-role" => "header"}
        %h1 RedisShelf
      %div{:"data-role" => "content"}
        %p= "#{redis.client.host}:#{redis.client.port} db: #{redis.client.db}"
        %ul#history
          - history.each do |key|
            %li
              %a{:href => "./#{key}"}= key

        %h2= "key: #{key}"
        - if values.is_a?(String)
          %p= values
        - else
          %ul
            - values.each do |value|
              %li.value= value
      %div{:"data-role" => "footer"}
        %a{:href => "/", :"data-role" => "button"} Home
